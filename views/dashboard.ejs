    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#groupModal">Add Group</button>
  </div>
  

<!-- Modal code starts here-->
<form method="POST" action="/group/create">
  <div class="modal fade" id="groupModal" tabindex="-1" aria-labelledby="groupModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
          <!-- <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> -->
        <div class="modal-body">
          <span style="margin: 1rem 0; font-size: 1rem; font-weight: 700;color:#1DA1F2">START A NEW GROUP</span>
          <hr style="color:#1DA1F2">
          <div class="grpName">
            <span style="font-size:.9rem; font-weight:700; margin: 1rem 0;">WHATS YOUR GROUP CALLED</span><br>
            <input type="text" placeholder="Group Name" name="name">
          </div>
          <div id="grpMember" style="margin-top:10px">
            <span style="font-size:.9rem; font-weight: 500;">GROUP MEMBERS</span><br>
            <input type="text" placeholder="Name" style="width:100px;" name="member[name]"><input type="text" placeholder="Email" style="display:inline" name="member[email]"><br>
            <input type="text" placeholder="Name" style="width:100px;" name="member[name]"><input type="text" placeholder="Email" style="display:inline"name="member[email]"><br>
          </div>
          <button type="button" class="btn btn-small" style="color:#1DA1F2; margin-top:3px; padding-left:none" onclick="addMember()"><i class="fas fa-plus fa-xs" style='padding-right:5px'></i>Add Member</button>
          <div>
            <button type="submit" class="btn btn-primary" style="margin-left:170px; background-color:#1DA1F2">Save Group</button>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</form>
<!--Modal Code ends here-->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
        function addMember(){
          var count=0;
          count=count+1;
          var textfield = document.createElement('input');
          var textfield1 = document.createElement('input');
          var linebreak = document.createElement('br');
          textfield.placeholder="Name";
          textfield.style.display="inline";
          textfield.style.width="100px";
          textfield.setAttribute("name","member[name]");
          textfield1.type="text";
          textfield1.placeholder="Email";
          textfield1.style.display="inline";
          textfield1.setAttribute("name","member[email]");
          document.getElementById('grpMember').appendChild(textfield);
          document.getElementById('grpMember').appendChild(textfield1);
          document.getElementById('grpMember').appendChild(linebreak);
        }
    </script>
